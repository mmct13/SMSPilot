@model SmsPilot.Models.Contact
@{
    ViewData["Title"] = "Supprimer";
}

<h1 class="text-danger">Supprimer</h1>
<h3>Voulez-vous vraiment supprimer ce contact ?</h3>
<div class="card mt-4" style="max-width: 500px;">
    <div class="card-body">
        <h5 class="card-title">@Model.Nom @Model.Prenom</h5>
        <h6 class="card-subtitle mb-2 text-muted">@Model.NumeroTelephone</h6>
        <p class="card-text">Groupe: @Model.Group</p>

        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Confirmer la suppression" class="btn btn-danger" />
            <a asp-action="Index" class="btn btn-secondary">Annuler</a>
        </form>
    </div>
</div>