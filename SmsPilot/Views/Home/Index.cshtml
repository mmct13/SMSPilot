@{
    ViewData["Title"] = "Tableau de bord";
}

<div class="text-center mb-5">
    <h1 class="display-5 text-secondary">Bienvenue sur <span style="color: var(--brand-color);">SmsPilot</span></h1>
    <p class="lead">Gérez vos campagnes SMS simplement et efficacement.</p>
</div>

<div class="row">
    <div class="col-md-4 mb-4">
        <div class="card card-stat p-4 text-center">
            <div class="icon-box mb-3">
                <i class="bi bi-credit-card-2-front"></i>
            </div>
            <h5 class="card-title">Crédit SMS</h5>
            <h2 class="fw-bold">@ViewBag.SmsBalance</h2>
            <p class="text-muted small">Solde API Orange</p>
        </div>
    </div>

    <div class="col-md-4 mb-4">
        <div class="card card-stat p-4 text-center">
            <div class="icon-box mb-3">
                <i class="bi bi-people-fill"></i>
            </div>
            <h5 class="card-title">Mes Contacts</h5>
            <h2 class="fw-bold">@ViewBag.ContactCount</h2>
            <p class="text-muted small">destinataires enregistrés</p>
            <a asp-controller="Contacts" asp-action="Index" class="btn btn-sm btn-outline-primary mt-2">Gérer</a>
        </div>
    </div>

    <div class="col-md-4 mb-4">
        <div class="card card-stat p-4 text-center bg-light">
            <div class="icon-box mb-3">
                <i class="bi bi-chat-dots-fill"></i>
            </div>
            <h5 class="card-title">Campagne</h5>
            <p class="card-text">Envoyer un nouveau message maintenant.</p>
            <a asp-controller="Messages" asp-action="Create" class="btn btn-primary mt-2" style="background-color: var(--brand-color); border:none;">Nouveau SMS</a>
        </div>
    </div>
</div>

<div class="row mt-4">
    <div class="col-md-12">
        <div class="card card-stat">
            <div class="card-header bg-white fw-bold">
                <i class="bi bi-clock-history"></i> Derniers envois
            </div>
            <div class="card-body">
                @if (ViewBag.RecentMessages != null && ((IEnumerable<dynamic>)ViewBag.RecentMessages).Any())
                {
                    <div class="table-responsive">
                        <table class="table table-hover align-middle">
                            <thead>
                                <tr>
                                    <th>Destinataire</th>
                                    <th>Date</th>
                                    <th>Statut</th>
                                    <th>Message</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var msg in ViewBag.RecentMessages)
                                {
                                    <tr>
                                        <td>@msg.Destinataire</td>
                                        <td>@msg.DateCreation.ToString("dd/MM/yyyy HH:mm")</td>
                                        <td>
                                            @if (msg.Statut == SmsPilot.Models.SmsStatus.Envoye)
                                            {
                                                <span class="badge bg-success">Envoyé</span>
                                            }
                                            else if (msg.Statut == SmsPilot.Models.SmsStatus.Echec)
                                            {
                                                <span class="badge bg-danger">Échec</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-warning text-dark">En attente</span>
                                            }
                                        </td>
                                        <td class="text-truncate" style="max-width: 200px;">@msg.Contenu</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                    <div class="text-center mt-2">
                        <a asp-controller="Messages" asp-action="Index" class="btn btn-link text-decoration-none">Voir tout l'historique</a>
                    </div>
                }
                else
                {
                    <p class="text-muted text-center py-3">Aucun historique récent.</p>
                }
            </div>
        </div>
    </div>
</div>