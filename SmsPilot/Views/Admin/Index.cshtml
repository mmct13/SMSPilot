@model IEnumerable<SmsPilot.Models.User>
@{
    ViewData["Title"] = "Administration";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1><i class="bi bi-shield-lock"></i> Administration</h1>
    <a asp-action="Create" class="btn btn-primary"><i class="bi bi-person-plus"></i> Nouvel Utilisateur</a>
</div>

<div class="card shadow-sm">
    <div class="card-header bg-white">
        <h5 class="mb-0">Gestion des utilisateurs</h5>
    </div>
    <table class="table table-hover mb-0">
        <thead class="table-light">
            <tr>
                <th>Nom</th>
                <th>Email</th>
                <th>Rôle</th>
                <th>Date création</th>
                <th class="text-end">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td class="fw-bold">@item.Nom</td>
                    <td>@item.Email</td>
                    <td>
                        @if (item.Role == SmsPilot.Models.UserRole.Admin)
                        {
                            <span class="badge bg-danger">ADMIN</span>
                        }
                        else
                        {
                            <span class="badge bg-info text-dark">USER</span>
                        }
                    </td>
                    <td>@item.CreatedAt.ToString("dd/MM/yyyy")</td>
                    <td class="text-end">
                        @if (User.Identity.Name != item.Nom)
                        {
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger" onclick="return confirm('Êtes-vous sûr de vouloir supprimer cet utilisateur ?');">
                                <i class="bi bi-trash"></i> Supprimer
                            </a>
                        }
                        else
                        {
                            <span class="text-muted small fs-italic">Votre compte</span>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>